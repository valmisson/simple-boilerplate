{
	"compilerOptions": {
    "baseUrl": ".",
		"moduleResolution": "node",
		"module": "esnext",
    "target": "esnext",
		"importsNotUsedAsValues": "error",
		"isolatedModules": false,
		"resolveJsonModule": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"checkJs": true,
    "lib": [
      "esnext",
      "DOM"
    ],
		"paths": {}
	},
	"include": [],
  "exclude": [
    "node_modules"
  ]
}
